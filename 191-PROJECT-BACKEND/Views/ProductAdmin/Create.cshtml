@model _191_PROJECT_BACKEND.Models.ProductModel

@{
    ViewData["Title"] = "Create";
}

<h1>ADD NEW PRODUCT</h1>

<h4>New article</h4>
<p>An article number is automatically generated upon creation!</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product_title" class="control-label"></label>
                <input asp-for="Product_title" class="form-control" />
                <span asp-validation-for="Product_title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ean_number" class="control-label"></label>
                <input asp-for="Ean_number" class="form-control" />
                <span asp-validation-for="Ean_number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product_description" class="control-label"></label>
                <input asp-for="Product_description" class="form-control" />
                <span asp-validation-for="Product_description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount_storage" class="control-label"></label>
                <input asp-for="Amount_storage" class="form-control" />
                <span asp-validation-for="Amount_storage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expiration_date" class="control-label"></label>
                <input asp-for="Expiration_date" class="form-control" />
                <span asp-validation-for="Expiration_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label> '1' = Domestic, '2'' = Foreign
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsSwedish" class="control-label"></label> 'True' Yes, 'False' No"
                <input asp-for="IsSwedish" class="form-control" />
                <span asp-validation-for="IsSwedish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image_path" class="control-label"></label>
                <input asp-for="Image_path" class="form-control" />
                <span asp-validation-for="Image_path" class="text-danger"></span>
            </div><br />
             <div class="form-group">
                <label for="Image_file"><strong> Select an image file to upload:</strong></label> <br /><br />
                <input type="file" id="Image_file" name="Image_file" class="form-control-file" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
