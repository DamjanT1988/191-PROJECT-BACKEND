@model ProductModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <label class="form-control-lg" asp-for="Product_title">Name:</label>
                <br />
                <input type="text" asp-for="Product_title" class="mr-5">
                <br />
                <input asp-for="Image_file" accept="image/*" />
                <span asp-validation-for="Image_file" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <h1 class="display-4">Welcome to Migyston Intranet Inventory Service!</h1>
    <p>INFORMATION:
        <br/>
        Navigate above to add and edit products
    </p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <partial name="_ValidationScriptsPartial" />
}
