@model IEnumerable<_191_PROJECT_BACKEND.Models.OrderModel>

@{
    ViewData["Title"] = "Index";
}

<h1>MAIN LIST - ORDERS</h1>

<p>
    <a asp-action="Create"class="btn btn-primary">Add new order</a>
</p>

@foreach (var item in Model)
{
    if (item.Id != null)
    {
        <h2>@Html.DisplayFor(modelItem => item.company_name) #@Html.DisplayFor(modelItem => item.Id)</h2>
        <strong>@Html.DisplayNameFor(model => model.Id)</strong>
        <br />
        @Html.DisplayFor(modelItem => item.Id)
        <br />
        <strong>@Html.DisplayNameFor(model => model.order)</strong>
        <br />
        @Html.DisplayFor(modelItem => item.order)
        <br />
        <strong>@Html.DisplayNameFor(model => model.email)</strong>
        <br />
        @Html.DisplayFor(modelItem => item.email)
        <br />
        <strong>@Html.DisplayNameFor(model => model.company_name)</strong>
        <br />
        @Html.DisplayFor(modelItem => item.contact_name)
        <br />
        <strong>@Html.DisplayNameFor(model => model.company_org)</strong>
        <br />
        @Html.DisplayFor(modelItem => item.company_org)
        <br />
        <strong>@Html.DisplayNameFor(model => model.company_adress)</strong>
        <br />
        @Html.DisplayFor(modelItem => item.company_adress)
        <br />
        <strong>@Html.DisplayNameFor(model => model.contact_name)</strong>
        <br />
        @Html.DisplayFor(modelItem => item.contact_name)
        <br />
        <strong>@Html.DisplayNameFor(model => model.status)</strong>
        <br />
        @Html.DisplayFor(modelItem => item.status)
        <br />
        <strong>@Html.DisplayNameFor(model => model.internal_note)</strong>
        <br />
        @Html.DisplayFor(modelItem => item.internal_note)
        <br />
        <br />
        <div>
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
        </div>
        <br />
        <hr />

    }

}
